@model grupoesparza.Models.Register

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <h3>Registro</h3><hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("saveuser", "account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Nombre usuario-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Nombre)
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @autofocus = "true", @placeholder = "Ingresa tu nombre..." })
                    @Html.ValidationMessageFor(m => m.Nombre)
                </div>

                <!-- Apellidos usuario-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Apellidos)
                    @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @placeholder = "Ingresa tus apellidos.." })
                    @Html.ValidationMessageFor(m => m.Apellidos)
                </div>

                <!-- Teléfono usuario-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefono)
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", @placeholder = "Escribe tu teléfono..." })
                    @Html.ValidationMessageFor(m => m.Telefono)
                </div>

                <!-- Universidades -->
                <div class="form-group">
                    <label for="universidades">Universidad</label>
                    <select id="universidades" name="id_universidad" class="form-control dropdown-university" required>
                        <option value="value">-- Selecciona tu universidad --</option>
                    </select>
                </div>

                <!-- Carreras -->
                <div class="form-group">
                    <label for="carreras">Carrera</label>
                    <select id="carreras" name="id_carrera" class="form-control dropdown-carreer" required>
                        <option value="value">-- Selecciona tu carrera --</option>
                    </select>
                </div>

                <!-- Grupo -->
                <div class="form-group">
                    <label for="grupo">Grupo</label>
                    <select data-val="true" id="grupo" name="id_grupo" class="form-control dropdown-group" required>
                        <option value="value">-- Selecciona tu grupo --</option>
                    </select>
                </div>

                <!-- Email usuario-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Ingresa tu E-mail" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <!-- Email usuario-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ingresa tu contraseña" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <!-- Sender Button-->
                <div class="form-group">
                   <button style="width:100%;" type="submit" class="btn btn-success">
                       Registrar
                   </button>
                </div>
            }
        </div>
        <div class="col-md-8" style="text-align:right;">
            <img  class="img-gallery-container" src="~/Content/img/varias/emporio.jpg" alt="" />
        </div>
    </div>
</div>

<!-- Main footer -->
<!-- !! STATIC CONTENT !!  -->
@Html.Partial("~/Views/Footer.cshtml")

@section scripts {
    @Scripts.Render("~/bundles/registro")
}
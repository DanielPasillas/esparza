@model IEnumerable<grupoesparza.Models.Galeria>


@{
    ViewBag.Title = "Galería Fotográfica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Cover-->
@Html.Partial("GalleryPartialViews/_galleryHeader")

<!-- Header Cover-->
<!-- Gallery Content -->
<section id="gallery-list-section">
    @if (!Model.Any())
    {
        <!-- WE did not find any image :( -->
    }
    else
    {
        <!-- Items Gallery -->
        <div class="isotope-wrap ">
            <div class="isotope col-3 gutter-3">
                <div id="gallery" class="isotope-items-wrap lightgallery gsi-color esparza-grid-gallery-content">
                    <div class="grid-sizer"></div>
                    @Html.Partial("GalleryPartialViews/_galleryContent")
                </div>
            </div>
        </div>
    }
</section>

<!-- View more button -->
<div class="isotope-pagination">
    <div class="iso-load-more">
        <button class="btn btn-dark-bordered btn-lg esparza-view-more">Ver más</button>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/gallery")

}

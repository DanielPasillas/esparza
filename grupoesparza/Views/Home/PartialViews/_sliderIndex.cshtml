@model grupoesparza.ViewModels.IndexViewModel

<!--Section Slider Index - Grupo Esparza @DateTime.Now.Year -->
<section id="tt-intro" class="slideshow-intro">
    <div class="tt-intro-inner">
        <div class="gl-carousel-wrap gel-carousel no-padding">
            <div class="owl-carousel cc-height-5 dots-right bg-dark" data-items="1" data-loop="true"
                 data-nav="true" data-nav-speed="500" data-mouse-drag="false" data-dots-speed="500" data-autoplay="true"
                 data-autoplay-timeout="8000" data-autoplay-speed="500"
                 data-autoplay-hover-pause="true">

                <!-- Section Items -->
                @foreach (var slider in Model.Carousel)
                {
                    <div class="cc-item">
                        <span class="cover bg-transparent-3-dark"></span>
                        <div class="cc-image bg-image" style="background-image: url(../../../Assets/images/slider/@slider.ImageSlider); background-position: 50% 50%;">
                        </div>
                        <div class="intro-caption caption-animate intro-caption-xxlg center">
                            <h2 class="intro-subtitle">
                                @slider.TituloSlider
                            </h2>
                            <p class="intro-description max-width-1000">
                                @slider.TextoSlider
                            </p>

                            @if (slider.IsLink == 1)
                            {
                                <div class="margin-top-30">
                                    <a href="@slider.URL" class="btn btn-white-bordered margin-top-5">Ver más</a>
                                </div>
                            }

                        </div>
                    </div>
                }
                <!-- Ends section items -->

            </div>
        </div>
    </div>
</section>
<!-- Section Slider -->

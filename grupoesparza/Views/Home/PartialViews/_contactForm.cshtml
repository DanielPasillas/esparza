@model grupoesparza.Models.Inicio

<!--Form contact-->
@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(m => m.Contacto.Name, new { @id = "contact-name", @class = "form-input", @required = "true" })
        <label class="form-label" for="contact-name">Nombre</label>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Contacto.Phone, new { @id = "contact-phone", @class = "form-input", @required = "true", data_constraints = "@Numeric" })
        <label class="form-label" for="contact-phone">Teléfono</label>
    </div>
    <div class="form-wrap">
        <label class="form-label" for="contact-message">Ingresa tu mensaje...</label>
        @Html.TextAreaFor(m => m.Contacto.Message, new { @id = "contact-message", @required = "true", @class = "form-input" })

    </div>
    <div class="form-wrap">
        @Html.TextBoxFor(m => m.Contacto.Email, new { @id = "form-email", @class = "form-input", @type = "email", data_constraints = "@Email @@equired" })
        <label class="form-label" for="form-email">E-mail</label>
    </div>
    <button class="btn btn-primary" type="submit">Enviar</button>
}


